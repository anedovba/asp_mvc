@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Products", null,
        new { @class = "" })

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
    {
        controller = "Products",
        action = "List",
        category = link,
        page = 1
    }, new
    {
        @class = ""+ (link == ViewBag.SelectedCategory ? " btn-primary" : "")
    })
}