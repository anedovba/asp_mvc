<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">
                <span class="hidden-xs">ShoesStore - магазин обуви</span>
                <div class="visible-xs">Shoes</div>
                <div class="visible-xs">Store</div>
            </a>
            @Html.Action("Summary", "Cart")
        
    </div>
            
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">*@
                <div class="visible-xs" style=" margin-top: 10px;">
                    <ul class="nav nav-sidebar">
                        <li>
                            @Html.Action("Menu", "Nav", new { horizontalNav = true })
                            </li>
                        </ul>
                </div>
                @*</ul>*@
            </div>
        

    <div class="row panel">
        @*<div class="visible-xs" style="margin-top: 60px" ></div>*@
        <div id="categories" class="col-sm-3 col-md-2 sidebar hidden-xs" style="margin-top:20px">
            <ul class="nav nav-sidebar">
                <li>
                    @Html.Action("Menu", "Nav")
                </li>
                </ul>
        </div>
        @*<div class="visible-xs" style="margin-top: 70px"></div>*@
        <div class="col-xs-12 col-sm-8">
            @RenderBody()
        </div>
    </div>
    


    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>